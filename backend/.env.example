# Database
DATABASE_URL=postgresql://username:password@localhost:5432/wedding_registry_db

# Security
SECRET_KEY=your-super-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Service (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Your Mortgage Company

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Redis (for caching and background tasks)
REDIS_URL=redis://localhost:6379/0

# Environment
ENVIRONMENT=development

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Wedding Platform APIs (when available)
THE_KNOT_API_KEY=your-the-knot-api-key
ZOLA_API_KEY=your-zola-api-key
WEDDINGWIRE_API_KEY=your-weddingwire-api-key

# Compliance
DEFAULT_WAITING_PERIOD_DAYS=60
MAX_CONTACTS_PER_DAY=50

# Features
ENABLE_SMS_CAMPAIGNS=true
ENABLE_WEB_SCRAPING=false
ENABLE_AUTOMATED_SCORING=true